{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/(user)/page.tsx", "app/(user)/layout.tsx", "components/Navbar.tsx", "context/AuthProvider.tsx", "services/modules/auth/user.service.ts", "services/modules/auth/user.slicer.ts", "services/reducers.jsx", "services/store.jsx", "services/hooks.jsx", "services/reducers.jsx", "app/layout.jsx"],
  "exclude": ["node_modules"]
}
